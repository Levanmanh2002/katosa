<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DatHangActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="ĐẶT HÀNG"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Giá sản phẩm"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/text_view"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_money"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txttongtien"
                        android:text="1.000.000.000"
                        android:textSize="15sp"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/s"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:text="Số điện thoại"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/text_view"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_phone_red"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtsodienthoai"
                        android:text="0123456789"
                        android:textSize="15sp"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/s"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:text="Gmail"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:background="@drawable/text_view"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_mark_email_red"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtemail"
                        android:text="test@gmail.com"
                        android:textSize="15sp"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:background="@color/s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:text="Nhập địa chỉ"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtdiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view"
                android:drawableLeft="@drawable/ic_add_location_alt"
                android:drawablePadding="5dp"
                android:hint="Nhập địa chỉ giao hàng"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndathang"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/custom_button"
            android:layout_gravity="center"
            android:text="ĐẶT HÀNG"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xemthemsp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/custom_button"
            android:layout_gravity="center"
            android:text="XEM THÊM SẢN PHẨM"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>