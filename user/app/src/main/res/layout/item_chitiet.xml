<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_imgchitiet"
                android:src="@drawable/ic_person"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_toEndOf="@id/item_imgchitiet"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_tenspchitiet"
                        android:text="Chi tiết sản phẩm"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_soluongchitiet"
                        android:text="Số lượng: 10"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_giachitiet"
                        android:text="Giá: 1.000.000.000"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_color"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_size"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_mota"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_sdt"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_diachi"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>